<Defs>

    <!-- T-51 Hotrodder Flame Job Power Armor Helmet -->
    <RecipeDef>
        <defName>Make_FCP_Apparel_T51_Hotrod_Flames_Power_Armor_Helmet</defName>
        <label>paint T-51 power armor helmet (Hotrodder Flame Job)</label>
        <description>Paint a T-51 power armor helmet with dazzling flame decals.</description>
        <jobString>Painting T-51 power armor helmet.</jobString>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>Smith</effectWorking>
        <soundWorking>Recipe_Smith</soundWorking>
        <workAmount>1200</workAmount>
        <workSkill>Crafting</workSkill>
        <skillRequirements>
            <Crafting>6</Crafting>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>FCP_Apparel_Power_Armor_T51_Helmet</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <FCP_Apparel_T51_Hotrod_Flames_Power_Armor_Helmet>1</FCP_Apparel_T51_Hotrod_Flames_Power_Armor_Helmet>
        </products>
        <researchPrerequisite>FCP_Research_Hotrodder_FlameJob</researchPrerequisite>
        <recipeUsers>
            <li>FCP_Production_Armor_Workbench</li>
        </recipeUsers>
    </RecipeDef>

